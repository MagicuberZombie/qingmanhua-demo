<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_pop_window"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tou_ming">

    <ImageView
        android:id="@+id/iv_connect_top"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/connect_top_img" />

    <GridView
        android:id="@+id/gv_connect"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/iv_connect_top"
        android:background="@drawable/shape_search_top"
        android:numColumns="4"
        android:paddingTop="10dp"
        android:scrollbars="none" />
</RelativeLayout>